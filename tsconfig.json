{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "~/*": ["./src/*"]
    },
    "lib": ["ES2017", "es6", "es7"],
    "moduleResolution": "node",
    "types": ["react", "jest", "react-native"],
    "jsx": "react-native",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strict": true,
    "typeRoots": ["src/typings", "./node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "./**/*.test.ts",
    "./**/*.test.tsx",
    "./**/*.spec.ts",
    "./**/*.spec.tsx"
  ]
}
